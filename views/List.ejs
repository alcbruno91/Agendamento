<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Confirmação de Consulta</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body> 
    <div class="row d-flex justify-content-center">
        <!--Grid column-->
        <div class="col-md-3 text-center justify-content-center mt-3">
            <form action="/findappo" class="bd-search text-start" method="GET" style="margin-left: 5rem;">
                <span class=""><strong>Buscar consulta:</strong></span><br>
                <input type="search" name="search" id="search" placeholder="Digite o e-mail ou CPF" class="me-2">
                <button class="btn btn-info">Pesquisar</button>
            </form>
            <% appos.forEach(appo => { %>
                <div class="card m-4">
                    <div class="card-header">
                      Confirmação de Consulta
                    </div>
                    <ul class="list-group list-group-flush">
                      <li class="list-group-item"><strong>Consulta:</strong> <%= appo.description %></li>
                      <li class="list-group-item"><strong>Paciente:</strong> <%= appo.name %> </li>
                      <li class="list-group-item"><strong>Email:</strong> <%= appo.email %> </li>
                      <li class="list-group-item"><strong>CPF:</strong> <%= appo.cpf %> </li>
                      <li class="list-group-item"><strong>Data:</strong> <%= appo.date.toLocaleDateString() %> </li>
            
                    </ul>
                    <% if(appo.finished == false){ %>
                        <form action="/finish" method="POST" class="m-2 pe-5 ps-5">
                            <input type="hidden" name="id" value="<%= appo._id %>">
                            <div class="text-center">
                                <button class="btn btn-success w-75">Finalizar consulta</button>
                            </div>
                        </form>            
                    <% } %>
                </div>
            <% }) %>
      
        </div>
        <!--Grid column-->
      
    </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js" integrity="sha384-fbbOQedDUMZZ5KreZpsbe1LCZPVmfTnH7ois6mU1QK+m14rQ1l2bGBq41eYeM/fS" crossorigin="anonymous"></script>
</html>





    
